<form action="/songs/<%= @song.slug %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <div>
    <label for="song_name">Name</label>
    <input type="text" name="song[name]" id="song_name" value="<%= @song.name %>">
  </div>

  <div>
    <% @genres.each do |genre| %>
      <label for="<%= genre.slug %>"><%= genre.name %></label>
      <input type="checkbox" name="song[genre_ids][]" value="<%= genre.id %>" id="<%= genre.slug %>">
    <% end %>
  </div>

  <div>
    <label for="artist_name">Artist Name</label>
    <input type="text" name="song[artist_attributes][name]" id="artist_name" value="<%= @song.artist.name %>">
  </div>

  <input type="submit" value="Save">
</form>
