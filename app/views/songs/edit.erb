<form action="songs/<%= @song.slug %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="song_name">Name</label>
  <input id="song_name" type="text" name="song[name]" value="<%= song.name %>">
  <label for="artist_name">Artist Name</label>
  <input id="artist_name" type="text" name="artist[name]" value="<%= song.artist.name %>">
  <input type="submit" name="submit" value="Update">
  <% @genres.each do |genre| %>
    <label for="<%= genre.name %>"><%= genre.name %></label>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.name %>">
  <% end %>
</form>
